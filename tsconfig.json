{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // 推奨: ESNextに変更
    "jsx": "react-jsx", // 推奨: 最新のJSX変換
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}